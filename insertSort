#include <stdio.h>
#include <stdlib.h>
int insertSort(int arr[], int length);

// insertSort function definition, return exchange times
int insertSort(int arr[], int length){
    int j, i, key;
//    int index;
    int count = 0;
    for(j = 1; j < length; j++){
        key = arr[j];
        i = j - 1;
        while(i >= 0 && arr[i] > key){
            arr[i + 1] = arr[i];
            i--;
            count++;
        }
        arr[i + 1] = key;
    }
//    for(index = 0; index < length; index++){
//        printf("%d\n", arr[index]);
//    }
    return count;
}
// main function
int main(void)
{
    int T, j, i;
    int exchangeTimes = 0;
    scanf("%d", &T);
    int N[T];
    for(j = 0; j < T; j++){
        scanf("%d", &N[j]);
        int arr[N[j]];
        for(i = 0; i < N[j]; i++){
            scanf("%d", &arr[i]);
        }
        exchangeTimes += insertSort(arr, N[j]);
    }
    printf("%d", exchangeTimes);
    return 0;
}
